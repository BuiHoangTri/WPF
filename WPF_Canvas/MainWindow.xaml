<Window x:Class="WPF_Canvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Canvas"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Canvas>
        <Button Width="200"
                Height="100"
                Content="1"
                FontSize="50"
                Canvas.Top="200"
                Canvas.Left="150"
                x:Name="btn1"
                Click="btn1_Click"
                />
        <Button Width="200"
                Height="100"
                Content="2"
                FontSize="50" 
                Canvas.Bottom="50"
                Canvas.Left="50"/>
        <Ellipse Fill="Aqua" Width="100" Height="50" />
        <Rectangle Fill="Pink" Width="150" Height="100"
                   Canvas.Left="50" Canvas.Top="20"/>
        <Grid Width="300" Height="200">
            <Ellipse Fill="AntiqueWhite" />
        </Grid>
    </Canvas>
</Window>
